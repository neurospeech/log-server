<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Exception Server</title>
    <link href="@CachedUrlHelper.Cached("/Content/Site.min.css")" rel="stylesheet" />
    <script src="@CachedUrlHelper.Cached("/Scripts/jquery-1.11.1.min.js")"></script>
    <script src="@CachedUrlHelper.Cached("/Scripts/web-atoms/web-atoms.js")"></script>
    <script src="@CachedUrlHelper.Cached("/Scripts/api-extensions.js")"></script>
    <link href="@CachedUrlHelper.Cached("/Scripts/web-atoms/style/atoms.min.css")" rel="stylesheet" />

    @RenderSection("HtmlHead",false)

    <script>
        var links = [
            {
                label: "Home", value: "/",
            }, {
                label: "Apps", value: "/apps",
            }, {
                label: "Logs", value: "/logs",
            }, {
                label: "Users", value: "/user"
            }
        ];
    </script>

</head>
<body>
    <section atom-type="AtomApplication">
        @if (IsSectionDefined("Header"))
        {

            RenderSection("Header", false);
        }
        else {
            <header style="height:70px; padding:10px;position:relative">
                <h1 style="display:block; position:absolute;left:10px;top:10px;margin:0">Exception - Server</h1>

                <ul atom-type="AtomLinkBar" atom-items="{links}" style="position:absolute;right:10px;top:10px;"></ul>

            </header>
        }




        @RenderBody()



        @if (IsSectionDefined("Footer"))
        {
            RenderSection("Footer", false);
        }
        else
        {

            <footer style="position:absolute">
                <a 
                   style="position:absolute;right:10px;bottom:10px;"
                   href="http://web-atoms.neurospeech.com" 
                   target="_blank">Powered by - Web Atoms</a>        
            </footer>
        }

    </section>
</body>
</html>